@model Internet_Programlama_Final_Work.Models.Logincs

@{
    ViewData["Title"] = "Login";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .login-container {
        padding-left: 200px;
        max-width: 600px;
        margin: auto;
    }

    .login-form {
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .login-form h1 {
            margin-bottom: 20px;
        }
</style>

<div class="container login-container">
    <div class="login-form">
        <h1 class="text-center">Login</h1>
        <h4 class="text-center">Logincs</h4>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" type="password" class="form-control" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LoggedStatus" /> @Html.DisplayNameFor(model => model.LoggedStatus)
                </label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>

            @if (ViewData["OnayMesaji"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">
                    @ViewData["OnayMesaji"]
                </div>
            }
        </form>
        <div class="text-center mt-4">
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Register", "Startp")'">Register</button>
        </div>
        <div class="text-center mt-2">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
