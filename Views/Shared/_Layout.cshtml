<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Internet_Programlama_Final_Work</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Internet_Programlama_Final_Work.styles.css" asp-append-version="true" />
    <style>
        /* Sol taraftaki menü */
        .sidebar {
            background-color: #333;
            color: #fff;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 200px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            justify-content: center; /* Dikey olarak ortala */
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin-bottom: 10px;
                    text-align: center; /* Metni ortala */
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: #fff;
                        font-weight: bold;
                    }

                        .sidebar ul li a:hover {
                            color: #ccc;
                        }

        /* İçerik container'ı */
        .content-container {
            margin-left: 250px; /* Sol menüye eklenen genişlik kadar içerikten marj ekle */
            padding-top: 70px; /* Navbar yüksekliğine göre ayarlayın */
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            right: 0;
            left: 200px; /* Sol menüye eklenen genişlik kadar navbarı kaydır */
            z-index: 1000;
            background-color: #fff; /* Navbar arka plan rengi */
            border-bottom: 1px solid #ddd; /* Navbar alt kenarlık */
            padding: 10px 20px; /* Navbar yatay ve dikey iç boşluk */
        }

        .navbar-brand {
            margin-right: 1rem; /* Logout yazısı ile arasına biraz boşluk ekler */
        }

        /* Footer */
        .footer {
            margin-left: 200px; /* Sol menüye eklenen genişlik kadar alt kısma marj ekle */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">HASTANE LABORATUVAR</a>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sol taraftaki menü container'ı -->
            <div class="sidebar">
                <div class="sidebar-content">
                    <ul>
                        <li><a asp-controller="Sonucs" asp-action="Index">Sonuçlar</a></li>
                        <li><a asp-controller="TestTurs" asp-action="Index">Test Türleri</a></li>
                        <li><a asp-controller="Doktors" asp-action="Index">Doktorlar</a></li>
                        <li><a asp-controller="Hastas" asp-action="Index">Hastalar</a></li>
                        <li><a asp-controller="Hemsires" asp-action="Index">Hemşireler</a></li>
                        <li><a asp-controller="LabAdres" asp-action="Index">Lab Adres</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Çıkış</a></li>
                    </ul>
                </div>
            </div>

            <!-- Ana içerik container'ı -->
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
